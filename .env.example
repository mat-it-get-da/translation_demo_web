# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Docker Compose configuration
BACKEND_PORT=8000
FRONTEND_PORT=80
FRONTEND_HTTPS_PORT=443
# 프론트엔드 빌드 시 API URL (빈 문자열이면 상대 경로 사용, Caddy 프록시 활용)
# 개발 환경에서 직접 백엔드로 연결하려면 http://localhost:8000 형식으로 설정
VITE_API_BASE_URL=
# 개발 환경에서 사용할 백엔드 포트 (BACKEND_PORT와 동기화됨)
VITE_BACKEND_PORT=8000

# Caddy HTTPS 설정 (프로덕션용)
# 도메인을 설정하면 자동으로 프로덕션 모드로 전환되고 Let's Encrypt 인증서 발급
# 예: CADDY_DOMAIN=example.com
# HTTP-01 챌린지 사용 (포트 80이 외부에서 접근 가능해야 함)
CADDY_DOMAIN=

# API keys
OPENAI_API_KEY=sk-your-openai-api-key-here 
DEEPL_API_KEY=your-deepl-api-key-here
